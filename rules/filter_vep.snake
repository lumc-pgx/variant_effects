rule filter_vep:
    input:
        "variant_effect/vep/{barcode}/{allele}.txt"
    output:
        "variant_effect/filtered_vep/{barcode}/{allele}.txt"
    params:
        transcript_id = gene["transcript"]
    conda:
        "../envs/vep.yaml"
    shell:
        "PERL5LIB=\"\" && filter_vep -i {input} -o {output} -filter \"Feature match {params.transcript_id}\""
        
